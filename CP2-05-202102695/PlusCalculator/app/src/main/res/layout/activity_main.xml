<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="202102695 장진영"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="7"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/seven"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/clear" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>
    <Button
            android:text="4"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/four"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/seven" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>
    <Button
            android:text="1"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/one"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/four" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>
    <Button
            android:text="0"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/zero"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/one" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>
    <Button
            android:text="5"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/five"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/eight" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintEnd_toStartOf="@+id/six" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"/>
    <Button
            android:text="6"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/six"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/nine" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="2"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/two"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/five" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/three" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"/>
    <Button
            android:text="3"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/three"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/six" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/plus"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/two" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintStart_toEndOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/equal" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"/>
    <Button
            android:text="="
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/equal"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/three" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="CLEAR"
            android:layout_width="385dp"
            android:layout_height="60dp" android:id="@+id/clear"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/result" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="13dp" android:layout_marginStart="13dp" android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="8"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/eight"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/clear" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintEnd_toStartOf="@+id/nine" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"/>
    <Button
            android:text="9"
            android:layout_width="110dp"
            android:layout_height="60dp" android:id="@+id/nine"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/clear" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/process"
            android:gravity="right"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:gravity="right"
            android:textSize="48sp"
            app:layout_constraintTop_toBottomOf="@+id/process" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>